<div class="container">
  <div class="row">
    <div class="quote col-sm-6 col-sm-offset-3">
      <div class="row">
        <h1 class="text-center quote">Request a quote!</h1>
        <form method="POST" action='/quote'>
          <div class="form-group col-md-6 col-md-offset-3">
            <input type="text" class="form-control" name="first_name" placeholder="First Name" maxlength="100" required>
          </div></br>
          <div class="form-group col-md-6 col-md-offset-3">
            <input type="text" class="form-control" name="last_name" placeholder="Last Name" maxlength="100" required>
          </div></br>
          <div class="form-group col-md-6 col-md-offset-3">
            <input type="email" class="form-control" name="email" placeholder="Email" maxlength="100" required>
          </div></br>
          <div class="form-group col-md-6 col-md-offset-3">
            <input type="url" class="form-control" name="img_url" placeholder="Image url" maxlength="255">
          </div></br>
          <div class="form-group col-md-6 col-md-offset-3">
            <textarea name="quote" class="form-control" rows="3" placeholder="Request a quote!" maxlength="255" required></textarea>
          </div></br>
          <button type="submit" class="btn btn-default col-sm-2 col-sm-offset-5">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>


